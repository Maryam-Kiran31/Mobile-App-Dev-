<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join meeting"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Meeting ID Input -->
    <EditText
        android:id="@+id/meeting_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Meeting ID or personal link name"
        android:inputType="text"
        android:minHeight="48dp" />

    <!-- Name Input -->
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Your Name"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <!-- Checkbox Options -->
    <CheckBox
        android:id="@+id/remember_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember my name for future meetings"
        android:padding="8dp"
        android:minHeight="48dp" />

    <CheckBox
        android:id="@+id/dont_connect_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't connect to audio"
        android:padding="8dp"
        android:minHeight="48dp" />

    <CheckBox
        android:id="@+id/turn_off_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn off my video"
        android:layout_marginBottom="20dp"
        android:padding="8dp"
        android:minHeight="48dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Cancel"
            android:layout_weight="1"
            android:padding="8dp" />

        <!-- Join Button -->
        <Button
            android:id="@+id/join_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Join"
            android:layout_weight="1"
            android:padding="8dp" />
    </LinearLayout>
</LinearLayout>
